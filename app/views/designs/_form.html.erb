<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Design Form</title>
</head>
<body>

<%= form_with(model: design) do |form| %>
  <% if design.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(design.errors.count, "error") %> prohibited this design from being saved:</h2>

      <ul>
        <% design.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :design_name, style: "display: block" %>
    <%= form.text_field :design_name %>
  </div>

  <div>
    <%= form.label :style, style: "display: block" %>
    <%= form.text_field :style %>
  </div>

  <div>
    <%= form.label :price_per_sqft, style: "display: block" %>
    <%= form.text_field :price_per_sqft %>
  </div>

  <div>
    <%= form.label :square_feet, style: "display: block" %>
    <%= form.number_field :square_feet %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.text_field :category %>
  </div>

  <div>
    <%= form.label :floorplan, style: "display: block" %>
    <%= form.text_field :floorplan %>
  </div>

  <div>
    <%= form.label :time_required, style: "display: block" %>
    <%= form.text_field :time_required %>
  </div>

  <div>
    <%= form.label :bio, style: "display: block" %>
    <%= form.text_field :bio %>
  </div>

  <div>
    <%= form.label :brief, style: "display: block" %>
    <%= form.text_area :brief %>
  </div>

  <div>
    <%= form.label :architect_id, style: "display: block" %>
    <%= form.text_field :architect_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

</body>
</html>
